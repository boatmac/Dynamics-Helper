{
  "manifest_version": 3,
  "name": "Dynamics Helper",
  "version": "2.0.0",
  "description": "Productivity tool for Technical Support Engineers",
  "permissions": [
    "nativeMessaging",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.dynamics.com/*",
    "https://*.powerplatform.microsoft.com/*",
    "https://portal.azure.com/*"
  ],
  "background": {
    "service_worker": "src/background/serviceWorker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.dynamics.com/*", 
        "https://*.powerplatform.microsoft.com/*",
        "https://portal.azure.com/*"
      ],
      "js": ["src/content/index.tsx"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["items.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "index.html"
  }
}
