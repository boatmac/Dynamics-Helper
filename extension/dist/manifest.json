{
  "manifest_version": 3,
  "name": "Dynamics Helper",
  "version": "2.0.0",
  "description": "Productivity tool for Technical Support Engineers",
  "permissions": [
    "nativeMessaging",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.dynamics.com/*",
    "https://*.powerplatform.microsoft.com/*",
    "https://portal.azure.com/*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.tsx-loader-D6xHlcQM.js"
      ],
      "matches": [
        "https://*.dynamics.com/*",
        "https://*.powerplatform.microsoft.com/*",
        "https://portal.azure.com/*",
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "items.json"
      ],
      "use_dynamic_url": false
    },
    {
      "matches": [
        "<all_urls>",
        "https://*.dynamics.com/*",
        "https://*.powerplatform.microsoft.com/*",
        "https://portal.azure.com/*"
      ],
      "resources": [
        "assets/index-CEymAP8w.js",
        "assets/index.tsx-sLzIDM0Q.js"
      ],
      "use_dynamic_url": false
    }
  ],
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "index.html"
  }
}
